@page
@model MediaBazaarWebsite.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="item2 centered_container">
  <section class="container1">
    <div>
 
  <form method= "post">
    <div class = "border p-3 mt-4">
        <div class = "text-center">
        <div class="row pb-2">
             <img class="centered-image" src="~/Resources/Images/LoginLogo.png"> <br><br> 
            <h2 class= text-primary pl-3"> Login</h2>
            
        </div>
        <div class= "mb-3">
           <label asp-for="LoggedUser.UserName">User Name:</label> 
           <input type="text" asp-for="LoggedUser.UserName" placeholder = "User Name">
           <span asp-validation-for="LoggedUser.UserName"></span> <br>
        </div>
        <br>
        <div class= "mb-3">
           <label asp-for="LoggedUser.Password">Password:&nbsp;&nbsp;&nbsp;</label>  
           <input type="password" asp-for="LoggedUser.Password" placeholder="Password">
           <span asp-validation-for="LoggedUser .Password"></span>
           <br><br> <br>
        </div>

            <button type= "submit" class="btn btn-primary" style= "width:180px">Login</button>
            <button type="reset" class="btn btn-warning" style= "width: 180px" value= "Cancel">Cancel</button>

    </div>
    </div>

</form>
</div>
   </section>
</div>
